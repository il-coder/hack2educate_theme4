{
    "manifest_version": 3,
    "name": "Video Dubbing",
    "description":"this tool dub your videos",
    "version":"1.0",
    "icons":{
        "16":"/images/16.png",
        "48":"/images/48.png",
        "128":"/images/128.png"
    },
    "permissions": ["storage", "tabs", "activeTab","unlimitedStorage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["https://*.youtube.com/*"],
          "css": ["content.css"],
          "js": ["content.js"]
        }
      ],
    "action":{
        "default_popup":"index.html",
        "default_title": "Video Dubbing Tool"
    }
   
}
